{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "baseUrl": "./",
    "paths": {
      "@*": ["./src*"],
      "@api/*": ["./src/api/*"]
      "@components*": ["./src/components*.vue"],
      "@enums*": ["./src/enums*"],
      "@utils*": ["./src/utils*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.vue"]
}
